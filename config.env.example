# Protocol Manager Environment Configuration
# Copy this file to .env and fill in your actual values

# Notion Configuration
NOTION_API_TOKEN=ntn_your_integration_token_here
NOTION_API_VERSION=2022-06-28

# Notion Database IDs (get these from your Notion workspace)
NOTION_GOALS_DATABASE_ID=your_goals_database_id_here
NOTION_TODOS_DATABASE_ID=your_todos_database_id_here
NOTION_SCHEDULE_DATABASE_ID=your_schedule_database_id_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.1

# Agent Configuration
AGENT_MAX_ITERATIONS=10
AGENT_MEMORY_DURATION_DAYS=30
AGENT_DEBUG_MODE=false
AGENT_VERBOSE=false

# Database Configuration (for agent memory)
DATABASE_URL=sqlite:///./protocol_manager.db

# Optional: External Integrations
GOOGLE_CALENDAR_CREDENTIALS_PATH=./credentials.json
SLACK_BOT_TOKEN=xoxb-your-slack-token
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# CLI Configuration
CLI_DEFAULT_AGENT=coordinator
CLI_OUTPUT_FORMAT=rich
CLI_LOG_LEVEL=INFO
